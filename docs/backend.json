
{
  "entities": {
    "UserProfile": {
      "title": "UserProfile",
      "description": "User profile data including preferences and stats.",
      "type": "object",
      "properties": {
        "displayName": { "type": "string" },
        "email": { "type": "string" },
        "photoURL": { "type": "string" },
        "totalReviews": { "type": "number" },
        "improvedCode": { "type": "number" }
      },
      "required": ["email"]
    }
  },
  "auth": {
    "providers": ["google.com", "password"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": "UserProfile",
      "description": "User profile document"
    }
  }
}
